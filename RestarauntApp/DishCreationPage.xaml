<Page x:Class="RestarauntApp.DishCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestarauntApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DishCreationPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width = "1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <Label FontSize="18" FontWeight="DemiBold" Content="Все ингридиенты:"></Label>
            <ListBox Margin="10" Height="300" x:Name="AllIngridentsBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>


                        <StackPanel Margin="5">
                            <TextBlock FontSize="16" Text="{Binding Path=Title}" HorizontalAlignment="Left" FontWeight="DemiBold" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" Text="Б:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Proteins}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" Ж:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Fats}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" У:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Carbohydrates}" HorizontalAlignment="Center" />
                               

                            </StackPanel>

                        </StackPanel>


                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Label FontWeight="DemiBold" FontSize="18" Content="Добавленные:"></Label>
            <ListBox Margin="10" Height="300" x:Name="AddedIngridentsBox" SelectionChanged="AddedIngridentsBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock FontSize="16" Text="{Binding Path=Title}" HorizontalAlignment="Left" FontWeight="DemiBold" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" Text="Б:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Proteins}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" Ж:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Fats}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" У:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Carbohydrates}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" Вес:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Weight}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel  Orientation="Horizontal">
                <Label FontSize="18" Content="Вес:"></Label>
                <TextBox x:Name="WeightInputBox" Text="{Binding Path=Weight}" Width="150"></TextBox>
                <Button Margin="2 0 0 0" Click="OnSaveWeight" Width="30" Content="✔"></Button>
            </StackPanel>
            
        </StackPanel>
        <StackPanel Grid.Column="4">
            <Label FontWeight="DemiBold" FontSize="18" Content="Информация:"></Label>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">

                        <TextBox FontSize="18" Text="Название" HorizontalAlignment="Left" Height="25" Width="230" x:Name="NameInputBox"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label  FontSize="18"  Width="80" Height="30" Content="Вес:"></Label>
                        <TextBlock FontSize="18" HorizontalAlignment="Left" Height="25" Width="150" x:Name="WeightShowBox"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label  FontSize="18"  Width="80" Height="30" Content="ККАЛ:"/>
                        <TextBlock FontSize="18" HorizontalAlignment="Left" Height="25" Width="150" x:Name="KcalShowBox"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label  FontSize="18"  Width="80" Height="30" Content="Б:"></Label>
                        <TextBlock FontSize="18" HorizontalAlignment="Left" Height="25" Width="150" x:Name="PBox"></TextBlock>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal">
                        <Label   FontSize="18" Width="80" Height="30" Content="Ж:"></Label>
                        <TextBlock FontSize="18" HorizontalAlignment="Left" Height="25" Width="150" x:Name="FBox"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label  FontSize="18"  Width="80" Height="30" Content="У:"></Label>
                        <TextBlock FontSize="18" HorizontalAlignment="Left" Height="25" Width="150" x:Name="CBox"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Button FontSize="18"  Margin="5" Width="100" Content="Сохранить" Click="OnSaveDish"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Margin="0 150 0 0" Grid.Row="0" Grid.Column="1">
            <Button FontSize="16" Height="30" Margin="5" Content="▶" Click="OnAddToDish"></Button>
            <Button FontSize="16" Height="30" Margin="5" Content="◀" Click="OnClearAddedProducts" ></Button>
        </StackPanel>
       
    </Grid>
</Page>
