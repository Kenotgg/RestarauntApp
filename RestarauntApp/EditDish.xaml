<Page x:Class="RestarauntApp.EditDish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestarauntApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditDish">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <Label FontWeight="DemiBold" FontSize="16" Content="Информация:"></Label>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            
            <StackPanel>

                <Label Height="25" Content="Название"></Label>
                <Label Height="25" Content="ККАЛ"></Label>
                <Label Height="25" Content="Вес"></Label>
                <Label Height="25" Content="Белки"></Label>
                <Label Height="25" Content="Жиры"></Label>
                <Label Height="25" Content="Углеводы"></Label>
            </StackPanel>
            <StackPanel Name="MainStackPanel">
                <TextBox Height="25" Width="300" Name="TitleBox" Text="{Binding Path=Title}"></TextBox>
                <TextBox Height="25" HorizontalAlignment="Left" Width="100" Name="KcalBox" Text="{Binding Path=Kcal}"></TextBox>
                <TextBox Height="25" HorizontalAlignment="Left"  Width="100" Name="WeightBox" Text="{Binding Path=Kcal}"></TextBox>
                <TextBox Height="25" HorizontalAlignment="Left"  Width="100" Name="ProteinsBox" Text="{Binding Path=Proteins}"></TextBox>
                <TextBox Height="25" HorizontalAlignment="Left"  Width="100" Name="FatsBox" Text = "{Binding Path=Fats}"></TextBox>
                <TextBox Height="25" HorizontalAlignment="Left"  Width="100" Name="CarbohydratesBox" Text="{Binding Path=Cabohydrates}"></TextBox>
            </StackPanel>
        </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Label  FontWeight="DemiBold" FontSize="16" Content="Список ингридиентов:"></Label>
            <ListBox Height="135"  x:Name="ProductBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontSize="16" Text="{Binding Path=Title}" HorizontalAlignment="Left" FontWeight="DemiBold" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" Text="Б:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Proteins}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" Ж:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Fats}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" У:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Carbohydrates}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button Content="▶" Click="OnAddProductToDish"  Height="30" Width="30" Margin="5"></Button>
            <Button Content="◀" Click="OnRemoveProductFromDish" Grid.Column="1" Grid.Row="1" Height="30" Width="30" ></Button>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Label FontSize="16" FontWeight="DemiBold" Content="Ингридиенты в блюде:"></Label>
            <ListBox Height="135"  x:Name="AddedProductBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontSize="16" Text="{Binding Path=Title}" HorizontalAlignment="Left" FontWeight="DemiBold" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" Text="Б:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Proteins}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" Ж:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Fats}" HorizontalAlignment="Center" />
                                <TextBlock FontSize="16" Text=" У:"></TextBlock>
                                <TextBlock FontSize="16" Text="{Binding Path=Carbohydrates}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Margin="0 5 5 0" HorizontalAlignment="Right" Width="120" Height="20" Click="OnSaveChanges" Content="Сохранить"></Button>
        </StackPanel>


    </Grid>
</Page>
