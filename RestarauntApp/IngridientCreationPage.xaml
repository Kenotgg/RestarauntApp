<Page x:Class="RestarauntApp.IngridientCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestarauntApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IngridientCreationPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ListBox Margin="25 10 25 0 " Height="390" FontSize="18" d:ItemsSource="{d:SampleData ItemCount=4}">
            </ListBox>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button FontSize="18" Margin="10" Width="120" Content="Удалить" Height="30"></Button>
                <Button FontSize="18"  Margin="10" Width="120" Content="Создать" Height="30"></Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25">
            <Label FontSize="16" Content="Введите название ингридиента:"></Label>
            <TextBox Margin="0 0 0 5" Grid.Column="1" Background="White" Width="250" Height="30"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0 0 10 0">
                    <Label HorizontalAlignment="Center" FontSize="18" Content="Б"></Label>
                    <TextBox Grid.Column="1" Background="White" Width="80" Height="30"/>
                </StackPanel>
                <StackPanel Margin="0 0 0 0">
                    <Label HorizontalAlignment="Center" FontSize="18" Content="Ж"></Label>
                    <TextBox Grid.Column="1" Background="White" Width="80" Height="30"/>
                </StackPanel>
                <StackPanel Margin="10 0 0 0">
                    <Label HorizontalAlignment="Center" FontSize="18" Content="У"></Label>
                    <TextBox Grid.Column="1" Background="White" Width="80" Height="30"/>
                </StackPanel>
                
            </StackPanel>
            <Button Margin="0 15 0 0" Height="30" FontSize="18" Content="Сохранить"></Button>
        </StackPanel>
    </Grid>
</Page>
